@page "/delete"

<PageTitle>HND Agent</PageTitle>

<h1>Удалить</h1>

<input type="text" @bind="@id" placeholder="Введите Id" />
<br/><br/>
<button onclick="@DelBook">Отправить</button>

@code {
    private string id = "";

    private async Task DelBook()
    {
        using var httpClient = new HttpClient();
        var response = await httpClient.DeleteAsync($"http://127.0.0.1:8000/books?book_id={id}");

    }
}